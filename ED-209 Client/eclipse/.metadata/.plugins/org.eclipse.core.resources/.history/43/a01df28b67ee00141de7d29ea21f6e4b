package net.pixelraven.ed209.module.modules;

import org.darkstorm.minecraft.gui.util.GuiManagerDisplayScreen;

import net.minecraft.client.Minecraft;
import net.pixelraven.ed209.ED209;
import net.pixelraven.ed209.module.Category;
import net.pixelraven.ed209.module.Module;

public class Disconnect extends Module{
	public Disconnect() {
		super("Disconnect", Category.MISC);
		setUseType(1);
		setUsage("Disconnect();");
		setBlockedState(3);
	}
	
	public void onUse() {
		Minecraft.getMinecraft().displayGuiScreen(new GuiManagerDisplayScreen(ED209.guiManager));
		Minecraft.getMinecraft().stopIntegratedServer();
	}
}
