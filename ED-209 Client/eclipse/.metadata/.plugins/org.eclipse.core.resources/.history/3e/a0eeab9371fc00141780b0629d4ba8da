package net.pixelraven.ed209.ui;

import java.awt.Color;

public class ThemeStyle {
	private float redForegroundColour = 0.0f;
	private float greenForegroundColour = 1.0f;
	private float blueForegroundColour = 1.0f;
	private float redBackgroundColour = 0.2f;
	private float greenBackgroundColour = 0.2f;
	private float blueBackgroundColour = 0.2f;

	public Color getBackgroundColour() {
		return new Color(redBackgroundColour, greenBackgroundColour, blueBackgroundColour);
	}

	public Color getForegroundColour() {
		return new Color(redForegroundColour, greenForegroundColour, blueForegroundColour);
	}

	public void setDisabledColour(Color newColour) {
		redDisabledColour = newColour.getRed();
		greenDisabledColour = newColour.getGreen();
		blueDisabledColour = newColour.getBlue();
	}

	public void setForegroundColour(Color newColour) {
		redForegroundColour = newColour.getRed();
		greenForegroundColour = newColour.getGreen();
		blueForegroundColour = newColour.getBlue();
	}
}
